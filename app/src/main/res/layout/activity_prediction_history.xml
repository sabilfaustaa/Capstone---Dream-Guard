<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_toolbar"
        app:navigationIconTint="@color/gray">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/prediction_history"
            android:textColor="@color/gray"
            android:textSize="20sp" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- Parent Layout for ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <!-- Row of Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <!-- Button 1 -->
                <Button
                    android:id="@+id/btnAllHistory"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="10sp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="8dp"
                    android:text="@string/button_all"
                    android:textColor="@color/purple"
                    android:textSize="12sp"
                    app:backgroundTint="@color/teal"
                    app:strokeColor="@color/purple"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- Button 2 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNoDisorderHistory"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="8dp"
                    android:text="@string/button_no_sleep"
                    android:textColor="@color/purple"
                    android:textSize="12sp"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/purple"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- Button 3 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApneaHistory"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"

                    android:paddingHorizontal="8dp"
                    android:text="@string/button_apnea"
                    android:textColor="@color/purple"
                    android:textSize="12sp"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/purple"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- Button 4 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInsomniaHistory"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="25sp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="4dp"
                    android:text="@string/button_insomnia"
                    android:textColor="@color/purple"
                    android:textSize="12sp"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/purple"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>


            <!-- Prediction Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/predictionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/purple"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Date Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/cardContentText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:text="@string/date"
                                android:textAlignment="center"
                                android:textColor="@color/purple"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Prediction Label -->
                    <TextView
                        android:id="@+id/labelPrediction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/label_prediction"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardView" />

                    <!-- Prediction Result -->
                    <TextView
                        android:id="@+id/resultPrediction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/result_prediction"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/labelPrediction" />

                    <!-- Recommendation Button -->
                    <Button
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:backgroundTint="@color/teal"
                        android:text="@string/button_reccomendation"
                        android:textColor="@color/purple"
                        app:icon="@drawable/ic_arrow_back"
                        app:iconGravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/resultPrediction" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
